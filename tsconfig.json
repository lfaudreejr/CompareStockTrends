{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "outDir": "server-dist",
    "baseUrl": "./server-src",
    "paths": {
      "*": [ "node_modules/*", "server-src/types/*" ]
    }
  },
  "include": [ "server-src/**/*" ]
}
